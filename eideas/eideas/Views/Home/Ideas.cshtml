@model IdeaModel
@{
    ViewData["Title"] = "Ideas";
}

<body>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1" id="logout">
        <div class="page-header">
            <h3 class="reviews">Ideas</h3>
        </div>
        <div class="comment-tabs">
            <ul class="nav nav-tabs" role="tablist">
                <li class="active"><a href="#comments-logout" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">View Ideas</h4></a></li>
                <li><a href="#add-comment" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">New Idea</h4></a></li>
            </ul>            
            <div class="tab-content">
                <div class="tab-pane active" id="comments-logout">                
                    <ul class="media-list">
                        <li class="media">
                            <div class="media-body"> <!--.OrderBy(i => i.IdeaUpdoots.Count) -->
                                @foreach (var idea in Model.Ideas) 
                                {
                                    // cut for brevity, need to add back more code from original
                                    <div class="well well-lg">
                                        <h4 class="media-heading text-uppercase reviews"> @idea.CreatedBy </h4>
                                        <ul class="media-date text-uppercase reviews">
                                            @idea.CreatedDate
                                        </ul>
                                        <p class="media-comment">
                                            @idea.IdeaContent
                                        </p>
                                        <h4 class="media-comment">
                                            @foreach (var user in Model.Users)
                                            {
                                                @if (String.Equals(idea.CreatedBy, user.UserName, StringComparison.OrdinalIgnoreCase))
                                                {
                                                    @foreach (var divs in Model.Divisions)
                                                    {

                                                    }
                                                    @user.UserDivisionDivisionId
                                                }
                                            }
                                        </h4>
                                        <p class="media-comment">
                                            <--Place Holder for PDCA-->
                                        </p>
                                    </div>
                                }
                            </div>
                      </li>
                    </ul> 
                </div>

                <div class="tab-pane" id="add-comment">
                    <form action="" method="post" class="form-horizontal" id="commentForm" role="form"> 
                        <div class="form-group">
                            <label asp-for="NewIdea.IdeaContent" class="col-sm-2 control-label">Idea</label>
                            <div class="col-sm-10">
                                <textarea asp-for="NewIdea.IdeaContent" class="form-control" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">                    
                                <button class="btn btn-success btn-circle text-uppercase" type="submit" id="submitComment"><span class="glyphicon glyphicon-send"></span> Submit Idea</button>
                            </div>
                        </div>            
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


</body>



